<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

   <settings>
    <!-- 카멜케이스 규칙으로 변환 -->
      <setting name="mapUnderscoreToCamelCase" value="true"/>
   </settings> 

	<typeAliases>
		<typeAlias type="com.poscoict.jblog.vo.UserVo" alias="uservo"/>
		<typeAlias type="com.poscoict.jblog.vo.PostVo" alias="postvo"/>
		<typeAlias type="com.poscoict.jblog.vo.CategoryVo" alias="categoryvo"/>
		<typeAlias type="com.poscoict.jblog.vo.BlogVo" alias="blogvo"/>
   	</typeAliases>	
	<mappers>
		<mapper resource="mybatis/mappers/user.xml"></mapper>
		<mapper resource="mybatis/mappers/blog.xml"></mapper>
	</mappers>
</configuration>
